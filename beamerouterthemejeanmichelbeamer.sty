%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
%       Standout frame type
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

\newenvironment{standout}{
    \setbeamercolor{background canvas}{
        bg=darkblue
    }

    \color{white}\headerfont\bfseries\Large
    \begin{frame}[plain]
        \centering
}{
    \end{frame}
}

\AtBeginSection[]{
    \begin{frame}[plain]
        \usebeamerfont{title}\bfseries\Large
        \centering
        \insertsection
        \progressbar
    \end{frame}
}

\AtBeginSubsection[]{
    \begin{frame}[plain]
        \usebeamerfont{title}
        \centering
        {
            \bfseries\Large
            \insertsection
        }
        \progressbar
        {
            \large
            \insertsubsection
        }
    \end{frame}
}
